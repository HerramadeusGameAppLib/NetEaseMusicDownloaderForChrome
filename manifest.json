{
    "name" : "网易云音乐下载工具",
    "version" : "1.0",
    "manifest_version": 2,
    "description": "一个允许你从网易云音乐网站下载音乐的小玩意。",
	
    "icons": 
    { 
        "16" : "icon/16.png",
        "48" : "icon/48.png",
        "128" : "icon/128.png"
    },
	
	"background" : 
	{
		"scripts" : ["script/js/background.js"],
	    "persistent" : false
	},
    "content_scripts" : 
	[
		{
			"matches" : ["*://music.163.com/*"],
			"js" : 
			[
				"script/js/get_song_info_from_page.js",
				"script/js/get_song_info_from_link.js"
			],
            "run_at" : "document_idle",
            "all_frames" : true
		}
	],
    "permissions" :
    [
		"*://*.163.com/*",
        "contextMenus",
		"background",
		"downloads",
		"activeTab",
		"tabs"
    ]
}
